@import '_variable'

@keyframes intro
  0%
    transform scale(0)
  100%
    transform scale(1)

body
  align-items center
  background-image radial-gradient(circle at bottom, color_2, color_1 300%)
  color color_2
  display flex
  flex-direction column
  flex-wrap wrap
  font-family Arial
  font-size 2em
  justify-content center
  text-align center

h1, a, footer
  animation intro 1s

strong
  color color_3
  cursor crosshair
  display flex
  justify-content center

a
  color color_1
  text-decoration none
  transition .5s all
  &:hover
    color color_4
    text-shadow 0 0 30px color_1

footer
  margin-top 1em
  a
    color color_4
    &:hover
      color color_2
